<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ADM</title>
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/Adm/IndexAdm.css" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"/>

    <!-- Boxicons CSS -->
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css"
          rel="stylesheet" />
</head>
<body style="background-color: #e3f2fd;">
    <nav>
        <div class="logo">
            <i class="bx bx-menu menu-icon"></i>
            <span class="logo-name">Open Minds</span>
        </div>
        <div class="sidebar">
            <div class="logo">
                <i class="bx bx-menu menu-icon"></i>
                <span class="logo-name">Open Minds</span>
            </div>

            <div class="sidebar-content">
                <ul class="lists">
                    <li class="list">
                        <a class="nav-link" asp-area="" asp-controller="Adm" asp-action="Index">
                            <i class='bx bx-grid-alt icon'></i>
                            <span class="link">Empresa</span>
                        </a>
                    </li>
                    <li class="list">
                        <a class="nav-link" asp-area="" asp-controller="Adm" asp-action="Funcionarios">
                            <i class='bx bx-user icon'></i>
                            <span class="link">Funcionarios</span>
                        </a>
                    </li>
                    <li class="list">
                        <a class="nav-link" asp-area="" asp-controller="Adm" asp-action="Analises">
                            <i class='bx bx-pie-chart-alt-2 icon'></i>
                            <span class="link">Análises</span>
                        </a>
                    </li>
                    <li class="list">
                        <a class="nav-link" asp-area="" asp-controller="Adm" asp-action="Configuracao">
                            <i class='bx bx-cog icon'></i>
                            <span class="link">Configurações</span>
                        </a>
                    </li>
                </ul>
                <div class="bottom-cotent">
                    <li class="list">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="LogOff">
                            <i class="bx bx-log-out icon"></i>
                            <span class="link">Log-out</span>
                        </a>
                    </li>
                </div>
            </div>
        </div>
    </nav>

    <section class="overlay"></section>
    <section claas="flex">
    <div class="contains">
        <div class="box-contains">
            <div class="box">
                <div class="format">
                    <div class="name-box"> Carga Horaria </div>
                    <time class="numero">00:00</time>
                    <div class="indicador">
                        <i class='bx bx-up-arrow-alt'></i>
                        <span class="text">Iniciar</span>
                    </div>
                </div>
            </div>
            <div class="box">
                <div class="format">
                    <div class="name-box">Ausências do Time</div>
                        <div>Próximas implementações</div>
                    <div class="indicador">
                        <i class='bx bx-right-arrow-alt'></i>
                        <span class="text">Ver histórico de ausências</span>
                    </div>
                </div>
            </div>
            <div class="box">
                <div class="format">
                    <div class="name-box">Reuniões</div>
                        <div>Próximas implementações</div>
                    <div class="indicador">
                        <i class='bx bx-camera-home'></i>
                        <span class="text">Ingressar na reunião</span>
                    </div>
                </div>
            </div>
            <div class="box">
                <div class="format">
                    <div class="name-box">Próximos Eventos</div>
                        <div>Próximas implementações</div>
                    <div class="indicador">
                        <i class='bx bxs-calendar-minus'></i>
                        <span class="text">Ver Calendário</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="avisos">
                <div class="contains-dois">
                <div class="containers">
                    <div class="box-dois">
                        <div class="name-box">Avisos Gerais</div>
                        <div>Bom trabalho a todos</div>
                        <div class="indicador">
                            <i class='bx bx-list-ul'></i>
                            <span class="text">Ver avisos</span>
                        </div>
                    </div>
                    <div class="corpoTable">
                            <div style="border:2px solid black; border-radius: 5px;">
                             <table class="table table-hover table-bordered" style="width:100%;">
                                <thead class="table-dark" style="text-align:center;">
                                    <tr>
                                        <th> Avisos Semanais </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td> Domingo </td>
                                    </tr>
                                    <tr>
                                        <td> Segunda-Feira </td>
                                    </tr>
                                    <tr>
                                        <td> Terça-Feira </td>
                                    </tr>
                                    <tr>
                                        <td> Quarta-Feira </td>
                                    </tr>
                                    <tr>
                                        <td> Quinta-Feira </td>
                                    </tr>
                                    <tr>
                                        <td> Sexta-Feira </td>
                                    </tr>
                                    <tr>
                                        <td> Sábado </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
    </section>

    <script>
        const navBar = document.querySelector("nav"),
            menuBtns = document.querySelectorAll(".menu-icon"),
            overlay = document.querySelector(".overlay");

        menuBtns.forEach((menuBtn) => {
            menuBtn.addEventListener("click", () => {
                navBar.classList.toggle("open");
            });
        });

        overlay.addEventListener("click", () => {
            navBar.classList.remove("open");
        });
    </script>
</body>
</html>

