@using Entities
@model VisualLayer.Models.Funcionario.FuncionarioInsertViewModel
@{
    List<Cargo> cargos = ViewBag.Cargos;
    ViewData["Title"] = "Cadastrar";
}
<head>
    <title>
        Cadastro
    </title>
</head>
<h1 style="margin: 15px;">Cadastro</h1>
<hr />
<div class="row" style="margin: 15px;">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-sm-8">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="col-sm-8">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-sm-8">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" for="input_cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="col-sm-8">
                <label asp-for="CargoId" class="control-label">Cargo</label>
                <select asp-for="CargoId" class="form-control">
                    @for (int i = 0; i < cargos.Count; i++)
                    {
                        <option value="@cargos[i].ID">@cargos[i].Funcao</option>
                    }
                </select>
                <span asp-validation-for="CargoId" class="text-danger"></span>
            </div>
            @if (ViewBag.Errors != null)
            {
                <div class="form-group">
                    <p class="bg-warning">
                        @ViewBag.Errors
                    </p>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Cadastrar" class=" btn btn-secondary btn-sm" />
            </div>
            <br />
            <div>
                <a asp-action="Cargo" class=" btn btn-secondary btn-sm">Cadastrar Cargo</a>
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Funcionarios" class=" btn btn-secondary btn-sm">Back to List</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}