@model VisualLayer.Models.Cargo.CargoInsertViewModel

@{
    ViewData["Title"] = "Criar";
}
<head>
    <title>
        Cadastro Cargo
    </title>
</head>
<h1 style="margin:15px;">Criar</h1>
<hr />
<div class="row" style="margin: 15px;">
    <div class="col-md-8">
        <form asp-action="Cargo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4">
                <label asp-for="Funcao" class="control-label"></label>
                <input asp-for="Funcao" class="form-control" />
                <span asp-validation-for="Funcao" class="text-danger"></span>
            </div>
            <div class="col-md-8">
                <label asp-for="NivelPermissao" class="control-label"></label>
                <input asp-for="NivelPermissao" class="form-control" />
                <span asp-validation-for="NivelPermissao" class="text-danger"></span>
            </div>
                        @if (ViewBag.Erros != null)
            {
                <div class="form-group">
                    <p class="bg-warning">
                        @ViewBag.Erros
                    </p>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-secondary btn-sm" />
            </div>
        </form>
    </div>
    <div>
        <a asp-area="" asp-controller="Adm" asp-action="Cadastrar" class="btn btn-secondary btn-sm">Back to List</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
