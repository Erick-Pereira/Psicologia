<!DOCTYPE html>
<!-- Designined by CodingLab | www.youtube.com/codinglabyt -->
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title> Análises </title>
    <link rel="stylesheet" href="~/css/Adm/IndexAdm.css">
    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <nav>
        <div class="logo">
            <i class="bx bx-menu menu-icon"></i>
            <span class="logo-name">Open Minds</span>
        </div>
        <div class="sidebar">
            <div class="logo">
                <i class="bx bx-menu menu-icon"></i>
                <span class="logo-name">Open Minds</span>
            </div>
            <div class="sidebar-content">
                <ul class="lists">
                    <li class="list">
                        <a class="nav-link" asp-area="" asp-controller="Adm" asp-action="Index">
                            <i class='bx bx-grid-alt icon'></i>
                            <span class="link">Empresa</span>
                        </a>
                    </li>
                    <li class="list">
                        <a class="nav-link" asp-area="" asp-controller="Adm" asp-action="Funcionarios">
                            <i class='bx bx-user icon'></i>
                            <span class="link">Funcionarios</span>
                        </a>
                    </li>
                    <li class="list">
                        <a class="nav-link" asp-area="" asp-controller="Adm" asp-action="Analises">
                            <i class='bx bx-pie-chart-alt-2 icon'></i>
                            <span class="link">Análises</span>
                        </a>
                    </li>
                    <li class="list">
                        <a class="nav-link" asp-area="" asp-controller="Adm" asp-action="Configuracao">
                            <i class='bx bx-cog icon'></i>
                            <span class="link">Configurações</span>
                        </a>
                    </li>
                </ul>
                <div class="bottom-cotent">
                    <li class="list">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="LogOff">
                            <i class="bx bx-log-out icon"></i>
                            <span class="link">Log-out</span>
                        </a>
                    </li>
                </div>
            </div>
        </div>
    </nav>           
       <div class="percentage">
        <dl justify="center">
            <dt>
             <h1 class="secondtitle">Comparativo de Usuarios</h1>
            </dt>   

         
            <dd class="percentagepercentage-1"><span class="text"><li>IOS: <div align="right" class="pie animate chart1" style="--p:11;--c:lightblue">11%</div></li></span></dd>
            <dd class="percentagepercentage-2"><span class="text"><li>Windows: <div align="right" class="pie animate chart2" style="--p:49;--c:yellow">60%</div></li></span></dd>
            <dd class="percentagepercentage-3"><span class="text"><li>Android: <div align="right" class="pie animate chart3" style="--p:16;--c:orange">23%</div></li></span></dd>
            <dd class="percentagepercentage-4"><span class="text"><li>Mac OS: <div align="right" class="pie animate chart4" style="--p:5;--c:darkred">5%</div></li></span></dd>
            <dd class="percentagepercentage-5"><span class="text"><li>Linux:  <div align="right" class="pie animate chart5" style="--p:1;--c:red">1%</div></li></span></dd>          
        </dl>
        </div>

    </section>
    <script>
        const navBar = document.querySelector("nav"),
            menuBtns = document.querySelectorAll(".menu-icon"),
            overlay = document.querySelector(".overlay");
        menuBtns.forEach((menuBtn) => {
            menuBtn.addEventListener("click", () => {
                navBar.classList.toggle("open");
            });
        });
        overlay.addEventListener("click", () => {
            navBar.classList.remove("open");
        });
    </script>
</body>

</html>
