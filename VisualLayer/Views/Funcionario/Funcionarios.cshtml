@model IEnumerable<VisualLayer.Models.Funcionario.FuncionarioSelectViewModel>
@using Shared.Extensions;

@{
    ViewData["Title"] = "Funcionarios";
}
<link rel="stylesheet" href="~/css/Funcionario/Funcionarios.css">
<link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
<head>
    <title> Funcionarios </title>
</head>
<nav>
    <div class="logo">
        <i class="bx bx-menu menu-icon"></i>
        <span class="logo-name">Open Minds</span>
    </div>
    <div class="sidebar">
        <div class="logo">
            <i class="bx bx-menu menu-icon"></i>
            <span class="logo-name">Open Minds</span>
        </div>
        <div class="sidebar-content">
            <ul class="lists">
                <li class="list">
                    <a class="nav-link" asp-area="" asp-controller="Funcionario" asp-action="Index">
                        <i class='bx bx-grid-alt icon'></i>
                        <span class="link">Empresa</span>
                    </a>
                </li>
                <li class="list">
                    <a class="nav-link" asp-area="" asp-controller="Funcionario" asp-action="Funcionarios">
                        <i class='bx bx-user icon'></i>
                        <span class="link">Funcionarios</span>
                    </a>
                </li>
                <li class="list">
                    <a class="nav-link" asp-area="" asp-controller="Funcionario" asp-action="Configuracao">
                        <i class='bx bx-cog icon'></i>
                        <span class="link">Configurações</span>
                    </a>
                </li>
            </ul>
            <div class="bottom-cotent">
                <li class="list">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="LogOff">
                        <i class="bx bx-log-out icon"></i>
                        <span class="link">Log-out</span>
                    </a>
                </li>
            </div>
        </div>
    </div>
</nav>
<section class="overlay"></section>

<body>
    <section class="home-section">
        <h1>Funcionarios</h1>
        @*<div class="cabecalho">*@
        <div class="content">
            <table class="rTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataNascimento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cargo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Genero)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EstadoCivil)
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.DataNascimento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cargo.Funcao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Genero)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EstadoCivil)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <script>
            const navBar = document.querySelector("nav"),
                menuBtns = document.querySelectorAll(".menu-icon"),
                overlay = document.querySelector(".overlay");

            menuBtns.forEach((menuBtn) => {
                menuBtn.addEventListener("click", () => {
                    navBar.classList.toggle("open");
                });
            });

            overlay.addEventListener("click", () => {
                navBar.classList.remove("open");
            });
        </script>
    </section>
</body>
