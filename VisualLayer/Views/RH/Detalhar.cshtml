@model VisualLayer.Models.Funcionario.FuncionarioDetailViewModel

@{
    ViewData["Title"] = "Detalhar";
    string id = ViewBag.ID;
}
<head>
    <title>Detalhes</title>
</head>
<h1>Detalhar</h1>

<head>
    <title>Detalhes</title>
    <link rel="stylesheet" href="~/css/Adm/Configuracao.css">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <section class="overlay"></section>
    <section class="home-section configbox" style="float: left;">
        <br>
        <div class="infohead">Detalhar</div>
        <div>
            <br>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Foto)
                </dt>
                <dd class="col-sm-10">
                    <img src=" @Model.Foto" alt="" style=" width: 75px; height: 75px;">
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Nome)
                </dd>



                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Email)
                </dd>



                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Cpf)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Cpf)
                </dd>



                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DataNascimento)
                </dd>



                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Cep)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Cep)
                </dd>


                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.NumeroCasa)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NumeroCasa)
                </dd>



                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Rua)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Rua)
                </dd>



                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Bairro)
                </dt>
                <dd class="col-sm-8 ">
                    @Html.DisplayFor(model => model.Bairro)
                </dd>



                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Cidade)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Cidade)
                </dd>


                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>
        </div>
        <div>
            <div>
                @if (id != Model.Id)
                {
                <a class="btn btn-secondary btn-sm" style="text-decoration: none; color: #FFF;" onclick="@("window.location.href='" + @Url.Action("Editar", "RH",Model) + "'");">Editar</a>
                }
                <a class="btn btn-secondary btn-sm" asp-action="Funcionarios">Back to List</a>
            </div>
        </div>
    </section>
</body>
